<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Tek Blog</title>
    <!-- Bulma CSS -->
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bulma@1.0.2/css/bulma.min.css' />
    {{! Load jQuery }}
    {{! <script src='https://code.jquery.com/jquery-3.6.0.min.js'></script> }}

  </head>
  <body>
    <header>
      <nav class='navbar has-background-grey-lighter' role='navigation' aria-label='main navigation'>
        <div class='navbar-brand'>
          <a class='navbar-item' href='/'>
            <img src='./images/brand-icon.png' />
          </a>
          <a role='button' class='navbar-burger' aria-label='menu' aria-expanded='false' data-target='navbarBasicExample'>
            <span aria-hidden='true'></span>
            <span aria-hidden='true'></span>
            <span aria-hidden='true'></span>
          </a>
        </div>

        <div id='navbarBasicExample' class='navbar-menu'>
          <div class='navbar-start'>
            <a class='navbar-item' href='/'>
              Home
            </a>

            <a class='navbar-item' href='/dashboard'>
              Dashboard
            </a>
          </div>

          <div class='navbar-end'>
            <div class='navbar-item'>
              {{#if authenticated}}
                <a class='navbar-item' id='logout'>
                  Logout
                </a>
              {{else}}
                <a class='navbar-item' href='/signup'>
                  <strong>Sign Up</strong>
                </a>
                <a class='navbar-item' href='/login'>
                  Login
                </a>
              {{/if}}
            </div>
          </div>
        </div>
      </nav>
    </header>

    <!-- HandleBars Template Views -->
    {{{body}}}

  </body>
  <script type='text/javascript' src='./js/navBar.js' type=''></script>

  <!-- Import Logout Script if User is Authenticated -->
  {{#if authenticated}}
    <script type='text/javascript' src='js/logout.js'></script>
  {{/if}}
</html>