<h2 class='title'>Dashboard</h2>
{{#each posts as |post|}}
<div class='container is-max-desktop mt-5'>
  <div class="columns is-gapless">
  <div class="column is-one-half has-background-light"><strong><a class="has-text-black" href='edit_post/{{post.id}}'>{{post.title}}</a></strong></div>
  <div class="column is-one-half has-background-light">Created By {{post.user.name}} on {{format_date post.date_created}}</div>
</div>
{{/each}}

  

<div class='row mb-4 project mt-5'>
  <div class='col-md-5'>
    <h2>Submit a New Post</h2>
  </div>
  <div class='col-md-7'>
    <form>
      <label>Post Title</label>
      <input type='text' id='title' required />
      <label>Post Content</label>
      <input type='text' id='body' class='w-100 custom-input-height' required />
      <button id='submitBtn'>Submit</button>
    </form>
  </div>
</div>

<script src='/js/newPost.js'></script>
{{#if posts}}
  {{! Load Delete JS }}
  <script src='/js/deletePost.js'></script>
{{/if}}